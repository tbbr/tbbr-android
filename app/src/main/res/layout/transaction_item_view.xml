<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_card_swipe_reveal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right">


    <android.support.v7.widget.AppCompatButton
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/transaction_delete_btn"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="DELETE"
        android:layout_gravity="bottom"
        android:background="@color/danger"
        android:textColor="@color/grey200"
        android:textSize="20sp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/transaction_card_wrapper"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <include layout="@layout/vertical_date_widget" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/transaction_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/transaction_sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/grey300"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/transaction_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/transaction_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey300"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/transaction_memo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:textColor="@color/grey500"
                android:elevation="4dp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>